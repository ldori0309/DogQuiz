<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#607D8B</item>
        <item name="colorPrimaryDark">#455A64</item>
        <item name="colorAccent">#CFD8DC</item>
    </style>

    <!-- Style for header text -->
    <style name="HeaderTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="QuestionStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/twentySp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RadioGroupStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingTop">@dimen/tenDp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:inputType">textCapWords</item>
        <item name="android:textSize">@dimen/seventeenSp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="startButtonStyle">
        <item name="android:background">@drawable/start_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/twentySp</item>
    </style>

    <style name="radioButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/fifteenSp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>


